<div class="sticker">
  <div class="page-title">
    <h2>Sign In</h2>
  </div>
</div>

<div class="box">

  <div class="input-group">
    <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
      <div>
        <%= f.input_field :email, :required => false, :autofocus => true, :placeholder => "Email" %>
      </div>
      <div>
        <%= f.input_field :password, :placeholder => "Password" %>
        <%= f.input_field :remember_me, inline_label: 'Remember me', label: false, :as => :boolean if devise_mapping.rememberable? %>
      </div>
  </div>
    <span style="float:left margin-right: 10px; height: 27px;">
      <%= f.button :submit, "Sign in" %>
    </span>
  
  <% end %>  
  <div style="clear:both"></div>
</div>  

<div class="box">
  <hr>
  <%= render "devise/shared/links" %>
</div>


<script type="text/javascript">
  $(document).ready(function(){
    $("#user_email").css("width", "200px");
    $("#user_password").css("width", "200px");

  })
</script>

