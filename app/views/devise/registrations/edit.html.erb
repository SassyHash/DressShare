<h1>Edit <%= resource_name.to_s.humanize %></h1>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-box">
    <div class="form-inputs">
      <%= f.input_field :email, :required => true, :placeholder => "School Email" %>
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>
      <%= f.input_field :first_name, :placeholder => "First Name", :autofocus => true %>
      <%= f.input_field :last_name, :placeholder => "Last Name" %>
      <%= f.association :school, :label => "School Information", :label_method => :name, 
      :include_blank => true, :required => true %>
      <%= f.input_field :class_year, :placeholder => "Class Year", :collection => (Date.today.year-10)..(Date.today.year+5), 
      :required => true, include_blank: true %>
      <%= f.input_field :password, :required => false, :autocomplete => "off", :placeholder => "New Password (optional)", :required => false %>
      <%= f.input_field :password_confirmation, :placeholder => "Password Confirmation", :required => false %>
      <%= f.input_field :current_password, :placeholder => "Current Password (required)", :required => true %>
    </div>
  </div>
  <div class="form-actions">
    <%= f.button :submit, "Update" %>
  </div>
<% end %>

<p>
<%= link_to "Back", :back %> || <%= link_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "I'm sorry you're unhappy with DressShare. Are you sure?" }, :method => :delete %>.</p>

