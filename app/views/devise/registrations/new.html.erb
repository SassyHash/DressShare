<h1>Sign up</h1> 
  <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>
    <div class="form-box">
      <div class="form-inputs">
          <%= f.input_field :first_name, :placeholder => "First Name", :autofocus => true %>
          <%= f.input_field :last_name, :placeholder => "Last Name" %>
          <%= f.association :school, :label => "School Information", :label_method => :name, 
          :include_blank => false, :require => true %>
          <%= f.input_field :class_year, :placeholder => "Class Year", :collection => (Date.today.year-8)..(Date.today.year+8), 
          :required => true, include_blank: false %>

          <%= f.input_field :email, :required => true, :placeholder => "School Email" %>
          <%= f.input_field :password, :required => true, :placeholder => "Password" %>
          <%= f.input_field :password_confirmation, :required => true, :placeholder => "Password confirmation" %>
      </div>
    </div>
    <div class="row">
      <div class="span4 offset2 form-actions">
        <%= f.button :submit, "Sign up" %>
      </div>
    </div>
  <% end %>

<div style="clear:both"></div>
      <%= render "devise/shared/links" %>

