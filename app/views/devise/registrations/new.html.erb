<div class="sticker">
  <div class="page-title">
    <h2>Sign up</h2>
  </div>
</div>

<div class="box"> 
  <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>
    <div class="input-group">
      <div>
        <%= f.input_field :first_name, :placeholder => "First Name", :autofocus => true %>
      </div>
      <div>
        <%= f.input_field :last_name, :placeholder => "Last Name" %>
      </div>
      <div>
        <%= f.association :school, :label => "School Information", :label_method => :name, :include_blank => false, :require => true %>
      </div>
      <div>
        <%= f.input_field :class_year, :placeholder => "Class Year", :collection => (Date.today.year-8)..(Date.today.year+8), 
      :required => true, include_blank: false %>
      </div>
      <div>
        <%= f.input_field :email, :required => true, :placeholder => "School Email" %>
      </div>
      <div>
        <%= f.input_field :password, :required => true, :placeholder => "Password" %>
      </div>
      <div>
        <%= f.input_field :password_confirmation, :required => true, :placeholder => "Password confirmation" %>
      </div>
    </div>
    <div class="input-group">
        <%= f.button :submit, "Sign up" %>
    </div>
  <% end %>
</div>
<hr>
<div class="box">
<div style="clear:both"></div>
      <%= render "devise/shared/links" %>

</div>

<script type="text/javascript">
  $(document).ready(function(){
    $("input").css("width","230");
    $("input[type=submit]").css("width","150");
  })
</script>
