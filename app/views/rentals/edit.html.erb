<div class="row-fluid" style="margin-left: auto; margin-right:auto">
  <title> Borrow A Dress From Our Closet </title>
  <h1>Change your rental request </h1>
  <h3>looking good on nickels and dimes </h3>

  <%= render :partial => 'shared/show_dress', :locals => {:dress => @dress} %>

  <h2> Request to Rent </h2>
  <div class="row-fluid" %>
  <%= simple_form_for @rental do |f| %>
    <% if @rental.errors.any? %>
      <%= render :partial => "shared/error_messages", :locals => {:object => @rental} %>
    <% end %>

    <div class="span8" style="margin: 20px" %>
      <div class="span6 %>" %>
        <%= f.input :start_date, :as => :string, :input_html => {:id => "start_date", :class => "datepicker"} %>
      </div>
      <div class="span6" %>
        <%= f.input :end_date, :as => :string, :input_html => {:id => "end_date", :class => "datepicker"} %>
      </div>
    <div>
    <%= f.button :submit, "Request to Rent **", :input_html => {:class=> "btn-js-success"}, :remote=> true %><br><br>
    <small> **You can only borrow the dress if you check out and the owner accepts your request. </small>

    <div id="dialogue">
      <p> This is a rental request. The owner has the final say in letting you rent the dress. </p>
    </div>

    </div>

<script type="text/javascript">

$(function(){
  $('#start_date').datepicker({
    changeMonth: true,
    changeYear: true,
    numberOfMonths: 2,
    showAnim: "slide",
    dateFormat: "yy-mm-dd"
  });

  $("#end_date").datepicker({
    defaultDate: "+1d",
    changeMonth: true,
    changeYear: true,
    numberOfMonths: 2,
    showAnim: "slide",
    dateFormat: "yy-mm-dd"
  });

})

</script>
  <% end %>
  </div class="clear:both">
