<title>The Closet</title>
<div class="sticker">
  <div class="searchbox">
    <%= render :partial => 'search', :locals => {:search => @search } %>
  </div>
    <% if user_signed_in? %>
    <span class="link-box" style="float:right">
      <%= link_to raw("<i class=\"icon-plus\"></i> Add A Dress"),
      new_dress_path %>
      <%= link_to raw("<i class=\"icon-home\"></i> My Dresses"),
      user_path(current_user) %>
    </span>
  <% end %>
  <div class="clear:both;"></div>
</div>


<% if @dresses.empty? %>
<% else %>
  <div class="box">
    <div class="dresseswrap">
      <%= render :partial => 'shared/show_dresses', :locals => {:dresses => @dresses} %>
    </div>
  </div>
<% end%>
<div style="clear:both"></div>

<script type="text/javascript">
  if ($(window).width() < 870) {
  $(".sticker").css('height','80px');
  } else if ($(window).width() < 480) {
  $(".sticker").css('height','120px');
  } else {
  $(".sticker").css('height','40px');
  }
  
</script>